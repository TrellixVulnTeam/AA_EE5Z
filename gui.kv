<WindowManager>:
    id: wm

<RV>:
    viewclass: 'RVButton'
    RecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'

<Allocations>:
    viewclass: 'Button'
    RecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'

<RVButton>:
    on_release:
        app.root.add_account_screen(self.text)
        app.root.current = 'account'
        app.root.clear_home_screen()

<GoAddAccount>:
    text: "Add Account"
    size_hint_y: .3
    on_release:
        print(app.root.children[0])
        print(app.root.children[0].name)
        app.root.current = "add_account"
        app.root.clear_home_screen()

<GoHome>:
    text: "Home"
    size_hint_y: .3
    on_release:
        #print(app.root.current)
        app.root.add_home_screen()
        app.root.current = "home"
        app.root.clear_account_screen()



<HomeScreen>:
    id: 'home'
    name: 'home'


<AccountScreen>:
    id: 'account'
    name: 'account'



<AddAccountScreen>:
    id: 'add_account'
    name: 'add_account'

    na_name: new_account_name
    na_balance: new_account_balance

    GridLayout:
        cols: 1
        Label:
            text: "Add Account"
        GridLayout:
            cols: 2
            Label:
                text: "Account Name"
            TextInput:
                id: new_account_name
                multiline: False
            Label:
                text: "Balance"
            TextInput:
                id: new_account_balance
                multiline: False
        Button:
            text: "Submit"
            on_press: root.add_a()
        GoHome:

<Popup>:
    Button:
        text: "Close"
        on_release: root.dismiss()







